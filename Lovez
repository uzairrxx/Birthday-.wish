    <!-- Response Message -->
    <div class="response-message" id="responseMessage"></div>
    
    <script>
        // Falling Hearts Animation
        function createHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.innerHTML = 'ðŸ’–';
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.animationDuration = Math.random() * 3 + 2 + 's';
            heart.style.opacity = Math.random();
            document.body.appendChild(heart);
            
            setTimeout(() => {
                heart.remove();
            }, 5000);
        }
        
        // Create hearts continuously
        setInterval(createHeart, 300);
        
        // Love Section Functionality
        let attempts = 0;
        
        function showLove() {
            const messages = [
                "Yay! I love you too! ðŸ’–âœ¨",
                "You make my heart so happy! ðŸ¥°ðŸ’•",
                "I knew it! We're perfect together! ðŸŒŸðŸ’–",
                "You're the best! Happy Birthday my love! ðŸŽ‰ðŸ’•"
            ];
            
            const randomMessage = messages[Math.floor(Math.random() * messages.length)];
            const responseDiv = document.getElementById('responseMessage');
            responseDiv.innerHTML = randomMessage;
            responseDiv.style.display = 'block';
            
            // Create celebration hearts
            for(let i = 0; i < 20; i++) {
                setTimeout(() => createCelebrationHeart(), i * 100);
            }
            
            setTimeout(() => {
                responseDiv.style.display = 'none';
            }, 3000);
        }
        
        function createCelebrationHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.innerHTML = 'ðŸ’–';
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.animationDuration = '1s';
            heart.style.fontSize = '30px';
            document.body.appendChild(heart);
            
            setTimeout(() => {
                heart.remove();
            }, 1000);
        }
        
        function runAway() {
            attempts++;
            const noBtn = document.getElementById('noBtn');
            const container = noBtn.closest('.love-section');
            const containerRect = container.getBoundingClientRect();
            
            const messages = [
                "Hey! Click the right button! ðŸ˜¤ðŸ’•",
                "Come on, you know you love me! ðŸ¥ºðŸ’–",
                "Stop running away from love! ðŸ˜‚ðŸ’•",
                "Just say yes already! ðŸ™ˆðŸ’–",
                "You're making this harder than it needs to be! ðŸ˜…ðŸ’•"
            ];
            
            if (attempts < 5) {
                // Move the button to a random position
                const maxX = containerRect.width - noBtn.offsetWidth;
                const maxY = containerRect.height - noBtn.offsetHeight;
                
                const randomX = Math.random() * maxX;
                const randomY = Math.random() * maxY;
                
                noBtn.style.position = 'absolute';
                noBtn.style.left = randomX + 'px';
                noBtn.style.top = randomY + 'px';
                noBtn.style.transition = 'all 0.3s ease';
                
                // Show playful message
                const responseDiv = document.getElementById('responseMessage');
                responseDiv.innerHTML = messages[attempts - 1];
                responseDiv.style.display = 'block';
                responseDiv.style.background = 'linear-gradient(135deg, #667eea, #764ba2)';
                
                setTimeout(() => {
                    responseDiv.style.display = 'none';
                }, 2000);
                
            } else {
                // After 5 attempts, make it impossible to click no
                noBtn.style.display = 'none';
                
                const responseDiv = document.getElementById('responseMessage');
                responseDiv.innerHTML = "Fine! I'll take that as a YES! ðŸ˜ŠðŸ’–<br>Happy Birthday Zara! ðŸŽ‰";
                responseDiv.style.display = 'block';
                responseDiv.style.background = 'linear-gradient(135deg, #ff6b9d, #ff8a9b)';
                
                // Create celebration
                for(let i = 0; i < 15; i++) {
                    setTimeout(() => createCelebrationHeart(), i * 150);
                }
                
                setTimeout(() => {
                    responseDiv.style.display = 'none';
                    // Reset everything
                    noBtn.style.display = 'inline-block';
                    noBtn.style.position = 'relative';
                    noBtn.style.left = 'auto';
                    noBtn.style.top = 'auto';
                    attempts = 0;
                }, 4000);
            }
        }
        
        // Add bounce animation to inputs on focus
        document.querySelectorAll('.answer-input').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.classList.add('bounce');
                setTimeout(() => {
                    this.parentElement.classList.remove('bounce');
                }, 1000);
            });
        });
        
        // Add some interactive effects
        document.querySelectorAll('.section').forEach(section => {
            section.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px) scale(1.02)';
            });
            
            section.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });
    </script>
